<% occur_at = @activity.occur_at || @activity.created_at %>
<script type="text/javascript">
   jQuery(function(){
      jQuery("#activity_calendar").renderCalendar({month:<%= occur_at.month%>,date:<%= occur_at.day %>, year:<%= occur_at.year %>});
   })
</script>


   <div id='activity_subject'>
       <span class='subject'><%= @activity.subject %></span>
   </div>
   <div id='activity_calendar'> this is a calendar </div>
   <p>
   <div><%= @activity.occur_at || @activity.created_at %></div>
   </p>
   <p>
   <div><span class='label'>Total cost:</span><span class='money'> <%= @activity.cost %></span>
   <span class='label'>Average Cost:</span><span class='money'> <%= @activity.cost/@activity.payers.size unless @activity.payers.empty? %></span></div>
   </p>
   <p>
   <div><span class='label'>Status: </span><%= @activity.status %></div>
   </p>
   <p>
     <strong>Detail:</strong>
     <%= @activity.detail %>
   </p>
<hr/>
<div>
  <strong>Payments Details:</strong>
  <table class="payment_detail">
    <tr>
      <th>Player</th>
      <th>Payed</th>
      <th>Balance</th>
      <th>Status</th>
    </tr>
    <% payers_count = @activity.payers.size %>
    <% average = @activity.cost / payers_count %>
    <% for payment in @activity.payments %>
    <% balance = payment.amount - average %>
      <tr>
         <td><%=payment.user.username%></td>
         <td class="number"><%=payment.amount%></td>
         <td class="number <%='negative-number' if balance <0 %>"><%=balance%></td>
     <td>
         <% if payment.confirmed %>
              Confirmed
             <% elsif payment.user == current_user%>
        <div id='<%= "confirm_span#{payment.id}" %>'><%= link_to_function 'Confirm', remote_function(:update => "confirm_span#{payment.id}", :url => { :action => :confirm_payment, :method => 'POST' }, :confirm => "Are you sure?") %> </div>
         <% else %>
         Not confirmed
             <% end %>

</td>
      </tr>
    <% end%>

  </table>

</div>

  <%= link_to "Edit", edit_activity_path(@activity) %> |
  <%= link_to "Destroy", @activity, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", activities_path %>

