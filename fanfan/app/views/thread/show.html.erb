<h1>Messages</h1>



 <div id="message_list">
          <table border="0">
	      <tr><th>From</th><th>Sent at</th><th>Message body</th> </tr>
     <% @messages.each do |message| %>
              <tr>
                  <td class="author"> <%= link_to message.sender.username %> </td>
                  <td class="date">   <%= message.sent_date %> </td>
                  <td class="body">   <%= message.body %> </td>
              </tr>
     <% end %>
          </table>
     <div id="reply"> 
       <%= form_for @new_message, :as => :message, :url => {:action => :reply, :id => @thread }  do |f| %> 
	  <div class="field">
	    <%= f.label :body %><br />
	    <%= f.text_area :body %>
	  </div>
	  <div class="actions">
	    <%= f.submit "Reply"%>
	  </div>
       <% end %>
     </div>
 </div>
<br />


